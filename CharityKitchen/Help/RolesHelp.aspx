<%@ Page Title="" Language="C#" MasterPageFile="~/Site.Master" AutoEventWireup="true" CodeBehind="RolesHelp.aspx.cs" Inherits="CharityKitchen.Help.RoleHelp" %>
<asp:Content ID="Content1" ContentPlaceHolderID="MainContent" runat="server">
    <h1>Help - Roles</h1>
    <h2>To Create a new Role:</h2>
    <p>
        Click the "New" button.<br />
		Type in a description for the new Role in the "Role Description" textbox.<br />
		Click the "Save" button.
    </p>
    <h2>To Edit an existing Role:</h2>
    <p>
        Click the "Select" link on the row of the Role you want to edit.<br />
		Type in a description for the new Role in the "Role Description" textbox.<br />
		Click the "Save" button.
    </p>
</asp:Content>
