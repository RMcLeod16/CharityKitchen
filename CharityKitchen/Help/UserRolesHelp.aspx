<%@ Page Title="" Language="C#" MasterPageFile="~/Site.Master" AutoEventWireup="true" CodeBehind="UserRolesHelp.aspx.cs" Inherits="CharityKitchen.Help.UserRoleHelp" %>
<asp:Content ID="Content1" ContentPlaceHolderID="MainContent" runat="server">
    <h1>Help - User Roles</h1>
    <h2>To Add a new Role to the User:</h2>
    <p>
        Click the "New" button.<br />
        Then Select the Role and Access Level you want to give to the User from the drop down boxes.<br />
        Click the "Save" button.
    </p>
    <h2>To Edit an existing User Role:</h2>
    <p>
        Click the "Select" link on the row of the User Role you want to edit.<br />
		Then Select the Role and Access Level you want to give to the User from the drop down boxes.<br />
		Click the "Save" button.
    </p>
</asp:Content>
